{
  "name": "4-natours",
  "version": "1.0.0",
  "description": "Leaning node, express and mongoDB",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:prod": "cross-env NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "build:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "test": "npm-run-all --aggregate-output cov:clean -p cov:unit cov:integration -s cov:summary-preset cov:report",
    "test:e2e": "jest --detectOpenHandles --runInBand --forceExit --colors -c jest.config.e2e.js",
    "test:integration": "npm-run-all cov:clean cov:integration",
    "test:unit": "npm-run-all cov:clean cov:unit",
    "cov:clean": "rimraf .nyc_output && rimraf coverage",
    "cov:unit": "jest --detectOpenHandles --forceExit --colors -c jest.config.unit.js",
    "cov:integration": "jest --detectOpenHandles --runInBand --forceExit --colors -c jest.config.integration.js",
    "cov:summary-preset": "mkdirp .nyc_output && cpy \"coverage/unit/coverage-final.json\" --rename=unit.json --flat .nyc_output && cpy \"coverage/integration/coverage-final.json\" --rename=integration.json --flat .nyc_output",
    "cov:report": "nyc report --reporter html --reporter lcov --report-dir ./coverage/summary"
  },
  "author": "WShiro",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "core-js": "^3.42.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mapbox-gl": "^3.11.1",
    "mongoose": "^5.13.22",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "ndb": "^1.1.5",
    "nodemailer": "^6.10.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "postmark": "^4.0.5",
    "pug": "^3.0.3",
    "sharp": "^0.34.1",
    "slugify": "^1.6.6",
    "validator": "^13.12.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chromedriver": "^136.0.3",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "geckodriver": "^5.0.0",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "mockingoose": "^2.16.2",
    "mongodb-memory-server": "^10.1.4",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "parcel-bundler": "^1.12.5",
    "prettier": "^3.3.3",
    "selenium-webdriver": "^3.6.0",
    "superagent": "^10.2.1",
    "supertest": "^7.1.1",
    "testcontainers": "^10.28.0"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
